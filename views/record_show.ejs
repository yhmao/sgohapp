    <% if(['jpg','png','tiff','jpeg','gif'].includes(record.file.split('.').pop().toLowerCase())) {%>
      <%= record.file %> <br><br>
      <a href='/upload/<%= record.file %>'>
        <img src="/upload/<%= record.file %>" alt="<%= record.file %>" width="400"  >
      </a>
